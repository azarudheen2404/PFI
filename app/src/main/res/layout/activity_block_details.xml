<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="in.co.esquareinfo.pfi.BlockDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide"
            android:layout_weight="1"
            android:layout_margin="@dimen/pre_secondary"
            android:scrollbars="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATE"
                    android:textSize="@dimen/primary_txt"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/normal"/>
                <Spinner
                    android:id="@+id/consent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/half"
                    android:layout_marginTop="@dimen/extra_lite"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:backgroundTint="@color/colorAccent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISTRICT"
                    android:textSize="@dimen/primary_txt"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/pre_secondary"/>
                <Spinner
                    android:id="@+id/nameDist"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/half"
                    android:layout_marginTop="@dimen/extra_lite"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:backgroundTint="@color/colorAccent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLOCK NAME"
                    android:textSize="@dimen/primary_txt"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/pre_secondary"/>
                <EditText
                    android:id="@+id/namepollng"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/half"
                    android:layout_marginTop="@dimen/extra_lite"
                    android:backgroundTint="@color/colorAccent"
                    android:inputType="text"/>

            </LinearLayout>
        </ScrollView>
        <ImageView
            android:id="@+id/search"
            android:layout_width="@dimen/half"
            android:layout_height="@dimen/half"
            android:src="@drawable/nxt_btn"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc_next"
            android:layout_gravity="bottom|center"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
